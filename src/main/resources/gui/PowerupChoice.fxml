<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="457.0" prefWidth="763.0"
            xmlns="http://javafx.com/javafx/11.0.1"
            fx:controller="it.polimi.se2019.view.client.gui.PowerupChoiceController">
    <children>
        <ImageView fitHeight="458.0" fitWidth="785.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../graphicassets/powerupChoiceBackgroung.png"/>
            </image>
        </ImageView>
        <BorderPane prefHeight="458.0" prefWidth="778.0">
            <top>
                <Label fx:id="title" text="Label" textFill="WHITE" BorderPane.alignment="CENTER">
                    <font>
                        <Font size="32.0"/>
                    </font>
                    <BorderPane.margin>
                        <Insets top="40.0"/>
                    </BorderPane.margin>
                </Label>
            </top>
        </BorderPane>
        <ImageView fx:id="powerup0" fitHeight="148.0" fitWidth="101.0" layoutX="172.0" layoutY="123.0"
                   pickOnBounds="true">
            <image>
                <Image url="@../graphicassets/powerups/teleporter_red.png"/>
            </image>
        </ImageView>
        <ImageView fx:id="powerup1" fitHeight="148.0" fitWidth="101.0" layoutX="335.0" layoutY="123.0"
                   pickOnBounds="true">
            <image>
                <Image url="@../graphicassets/powerups/teleporter_red.png"/>
            </image>
        </ImageView>
        <ImageView fx:id="powerup2" fitHeight="148.0" fitWidth="101.0" layoutX="499.0" layoutY="123.0"
                   pickOnBounds="true">
            <image>
                <Image url="@../graphicassets/powerups/teleporter_red.png"/>
            </image>
        </ImageView>
        <ImageView fx:id="powerup3" fitHeight="148.0" fitWidth="101.0" layoutX="645.0" layoutY="120.0"
                   pickOnBounds="true">
            <image>
                <Image url="@../graphicassets/powerups/teleporter_red.png"/>
            </image>
        </ImageView>
        <Button fx:id="powerupButton0" layoutX="172.0" layoutY="123.0" mnemonicParsing="false"
                onAction="#powerupButton0Pressed" prefHeight="148.0" prefWidth="101.0"
                style="-fx-background-color: transparent; -fx-border-color: red;"/>
        <Button fx:id="powerupButton1" layoutX="335.0" layoutY="123.0" mnemonicParsing="false"
                onAction="#powerupButton1Pressed" prefHeight="148.0" prefWidth="101.0"
                style="-fx-background-color: transparent; -fx-border-color: red;"/>
        <Button fx:id="powerupButton2" layoutX="499.0" layoutY="123.0" mnemonicParsing="false"
                onAction="#powerupButton2Pressed" prefHeight="148.0" prefWidth="101.0"
                style="-fx-background-color: transparent; -fx-border-color: red;"/>
        <Button fx:id="powerupButton3" layoutX="645.0" layoutY="120.0" mnemonicParsing="false"
                onAction="#powerupButton3Pressed" prefHeight="148.0" prefWidth="101.0"
                style="-fx-background-color: transparent; -fx-border-color: red;"/>
        <Button fx:id="button" disable="true" layoutX="329.0" layoutY="346.0" mnemonicParsing="false"
                onAction="#buttonPressed" text="Dont use powerups" visible="false"/>
    </children>
</AnchorPane>
